<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextInputLayout.Hint">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextInputLayout.Error">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="TextInputLayout.Counter">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextInputLayout.Counter.Overflow">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
    <item name="hintTextAppearance">@style/TextInputLayout.Hint</item>
    <item name="errorTextAppearance">@style/TextInputLayout.Error</item>
    <item name="counterTextAppearance">@style/TextInputLayout.Counter</item>
    <item name="counterOverflowTextAppearance">@style/TextInputLayout.Counter.Overflow</item>
</style>

    <style name="FloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#e0c9c4c4</item>
        <item name="android:textSize">13dp</item>
    </style>
</resources>